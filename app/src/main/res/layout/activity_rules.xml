<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Rules">


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/num_cards_to_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Number of cards to match"
            android:textColorHint="@android:color/black"
            android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/num_cards_to_match_to_win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Number of cards to match to win"
            android:textColorHint="@android:color/black"
            android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/apply_rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#43E309"
        android:text="Apply" />

    <Button
        android:id="@+id/cancel_rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel" />
        ></TableRow>


</LinearLayout>